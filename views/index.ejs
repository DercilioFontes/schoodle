<!DOCTYPE html>
<html lang="en">
<head>
  <title>Schoodle</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- External CSS-->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link rel="stylesheet" href="styles/layout.css">
  <link rel="stylesheet" href="styles/main.css">
  <link rel="stylesheet" href="styles/nav.css">

  <link rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.8.2/fullcalendar.min.css' />


  <link rel='stylesheet' href="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.css">





  <style>
    #chooseDateTime{
      z-index: -1;
      box-shadow: 5px 10px 18px #888888;
      margin-top: 20px;
      background-color: white;
      display: grid;
      max-width: 800px;
      height: 500px;
      grid-template-columns: 60% 40%;
      margin:0 auto;
      grid-row-gap: 40px;
      grid-column-gap: 20px;
      color: gray;
      padding-top: 60px;
    }
    #calendar {
      background-color: #df98852e;
      margin: 20px;
      padding-top: 20px;
    }
    #time {
      background-color: #f6be6126;
      margin: auto;
      padding: 20px;
    }
    #time p{
      margin: 10px;
    }
    #chooseTime {
      padding: 10px;
      color: white;
      background: #f6be61;
      font-size: 15px;
      margin: auto;
    }

    /*css for Random url generator*/
    #generateRandomUrl{
      max-width: 500px;
      margin: 10px auto;
      background-color: white;
      padding: 30px;
      text-align: center;
    }
    #randomUrl {
      padding: 0px 10px;
      font-size: 20px;
      width: 400px;
      color: gray;
    }
    #copy {
      width: 5em;
    }


  </style>

</head>
<body>
  <!-- top nav bar -->
  <nav id="nav-bar">
    <img class="logo" src="http://www.fillmurray.com/200/200">
    <span class="header">Schoodle!</span>
  </nav>

<main class="container">
  <h2 class="page-head">Create your event!</h2>

  <form method="POST" action="/events" id="eventForm">
    <div id="event">
      <fieldset class="eventForm">
        <i class="fa fa-user" style="font-size:36px"></i>
        <input text="text" name="userName" id="userName" placeholder="Enter name">
        <i class="material-icons" style="font-size:36px">email</i>
        <input text="text" name="email" id="email" placeholder="Enter email" >
        <i class="material-icons" style="font-size:36px">title</i>
        <input text="text" name="title" id="title" placeholder="Enter title">
        <i class="material-icons" style="font-size:36px">room</i>
        <input text="text" name="location" id="location" placeholder="Add location">
        <i class="fa fa-sort-alpha-desc" style="font-size:36px"></i>
        <input type="text" name="description" id="description" placeholder="Add note">
      </fieldset>
      <!-- <button class="create-event">Create Event</button> -->
    </div>

    <div id="chooseDateTime">

      <!-- calender starts here -->
     <fieldset id='calendar'></fieldset>

      <!-- time starts here -->
      <fieldset id="time">
        <div></div>
      </fieldset>

    </div>

  <!-- RandomUrl for attendee -->
    <div id="randomURL">
      <fieldset id="generateRandomUrl">
        <h1> Invite participants via ........</h1>
        <p>Everyone with the link can vote-no account requird</p>
        <input type="text" id="randomUrl" readonly>
        <input type="button" value="copy" id="copy">
      </fieldset>
  </div>

    <input type="submit" name="event" id="eventButton">

  </form>

</main>
  <script
    src="http://code.jquery.com/jquery-3.3.1.js"
    integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="
    crossorigin="anonymous"></script>

  <script
    src="http://code.jquery.com/ui/1.12.1/jquery-ui.js"
    integrity="sha256-T0Vest3yCU7pafRw9r+settMBX6JkKN06dqBnpQ8d30="
    crossorigin="anonymous"></script>

  <script type="text/javascript" src='/scripts/moment.js'></script>
  <script type="text/javascript" src='https://cdnjs.cloudflare.com/ajax/libs/fullcalendar/3.8.2/fullcalendar.min.js'></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.min.js"></script>

  <script type="text/javascript" src="/scripts/app.js"></script>






</body>
</html>
